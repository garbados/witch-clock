{
  "name": "witch-clock",
  "type": "module",
  "version": "4.0.0",
  "description": "Annotate dates within the Calendar of the Witchmothers",
  "main": "lib/index.js",
  "files": [
    "lib/*.js",
    "README.md"
  ],
  "scripts": {
    "test": "standard && mocha",
    "build": "rollup --config rollup.config.js",
    "release": "npm run build && terser www/web.js -c -m -o www/web.min.js",
    "watch": "sane \"npm run build\" . --glob={lib,src}/*.js",
    "serve": "serve www",
    "dev": "run-p watch serve",
    "cov": "c8 npm test",
    "lcov": "c8 --reporter=\"lcovonly\" npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbados/witch-clock.git"
  },
  "keywords": [
    "time"
  ],
  "author": "Diana Belle",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/garbados/witch-clock/issues"
  },
  "homepage": "https://clock.bovid.space",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "c8": "^10.1.3",
    "fast-check": "^3.23.2",
    "html-alchemist": "^1.1.1",
    "mocha": "^11.0.1",
    "npm-run-all2": "^7.0.2",
    "rollup": "^4.30.0",
    "sane": "^5.0.1",
    "serve": "^14.2.4",
    "standard": "^17.1.2",
    "terser": "^5.37.0"
  },
  "dependencies": {
    "astronomy-bundle": "^7.7.7",
    "lunarphase-js": "^2.0.3",
    "luxon": "^3.5.0"
  }
}
